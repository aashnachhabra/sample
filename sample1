function splitLimitMgmtRecord() {
    var request = {};
    request["plLimitID"] = document.getElementById("plLimitID").value;
    if (request != null || request != '') {
        showAndHide();
        $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "splitPlLimitRecord",
            data: JSON.stringify(request),
            dataType: 'json',
            success: function (response) {
                if (response.limit.msg == "SUCCESS") {
                    $("#copyModal").modal('hide');
                    document.getElementById("SaveSuccessMessageSplit").innerHTML = 'Successfully Split PL Limit Record';
                    $("#sucessBoxModalSplit").modal("toggle");
                    window.location.href = "./getLimitMgmtDetails";
                    var request = {};
                    request["limitMgmtArray"] = [response.limit.limitAdminCopy];
                    console.log(request)
                    $.ajax({
                        type: "POST",
                        contentType: "application/json",
                        url: "setLimitID",
                        data: JSON.stringify(request),
                        dataType: 'json',
                        success: function (response) {
                            if (response.limitMsg == "SUCCESS") {
                                console.log('here')
                                var newTab = window.open("./getLimitMgmtDetails", '_blank')
                                newTab.focus();
                            }
                        },
                        error: function (xhr) {
                            console.log(xhr);
                            alert("Error while Getting Limit Management Details.");
                        }
                    });
                } else if (response.limitMsg == "ERROR") {
                    $("#copyModal").modal('hide');
                    document.getElementById("ErrorMesssage").innerHTML = 'Something went wrong while splitting PL Limit Record, please try again..!';
                    $("#errorModal").modal("toggle");
                }
                showAndHide();
            },
            error: function (xhr) {
                console.log("error", xhr);
                alert("Something went wrong while splitting PL Limit Record, please try again..!");
            }
        });
    }
}
