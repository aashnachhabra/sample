import { IconProp } from "@fortawesome/fontawesome-svg-core";

export interface TableSettings {
    column: ColumnSetings[];
    action?: ActionSettings[];
    tableClass?: string[]
    headerClass?: string[];
    // showSubSections?:boolean;
}

export interface ColumnSetings {
    primaryKey: string;
    header?: string;
    format?: PipeFormatNum;
    pipe?: any;
    // subColumns?: SubColumnSettings[] ;
}
// export interface SubColumnSettings{
//     subKey:string;
//     subHeader?:string;
//     subFormat?: PipeFormatNum;
//     subPipe?:any;
// }

export interface ActionSettings {
    title: string;
    showTitle?: boolean;
    icon?: IconProp;
    func: any;
    class?: string[];
    params: object;
    editingRow?: boolean;
}

export enum PipeFormatNum {
    DEFAULT, //0
    CURRENCY, //1
    DATE, //2
    PERCENTAGE, //3
    YESNO, //3
}

export enum Actions {
    ADD,
    EDIT,
    DELETE,
}
