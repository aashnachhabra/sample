JS 

function getPrefix() {
    showAndHide();
    var inputPrefix = document.getElementById("inputPrefix").value;
    var request =createRequestBodyPrefix(inputPrefix)
    $.ajax({
        type: "GET",
        contentType: "application/json",
        url: "/abb/getLookUpRecord",
        data: request,
        success: function (response) {
            window.location.href = "/abb/getLookUpRecord?batchDetailID=" + request.batchDetailID + "&term=" +encodeURIComponent(request.term);
            $('#prefixLookup').modal('hide');
            showAndHide();
        },
        error: function (xhr) {
            document.getElementById("ErrorMessagePrefix").innerHTML = "No record found for the given prefix";
            $('#errorModalPrefix').modal('show');
            $('#prefixLookup').modal('hide');
            showAndHide();
        }
    });
}

