ts 

import { Component } from '@angular/core';

@Component({
  selector: 'app-benefits',
  templateUrl: './benefits.component.html',
  styleUrls: ['./benefits.component.css']
})
export class BenefitsComponent {
  deductible = {
    individual: { inNetwork: '$1,500', outNetwork: '$3,000' },
    family: { inNetwork: '$3,000', outNetwork: '$9,000' }
  };

  outOfPocket = {
    individual: { inNetwork: '$1,500', outNetwork: '$9,000' },
    family: { inNetwork: '$3,000', outNetwork: '$18,000' }
  };

  preventiveCare = {
    inNetwork: 'No copay',
    outNetwork: 'Not covered'
  };

  handleClick(item: string) {
    alert(`Clicked on: ${item}`);
  }
}


