<form [formGroup]="accMgmtContactForm">
    <div class="form-group mb-3">
      <label for="groupNumber">Group Number <span class="text-danger">*</span></label>
      <input type="number" class="form-control" id="groupNumber" formControlName="groupNumber" (change)="getGroupName()" required />
    <div *ngIf="groupNumber?.invalid && groupNumber?.touched" class="error-message text-danger"
    style="font-size: 12px;">
    Group Number is required.
  </div>
    </div>
    <div class="form-group mb-3">
      <label for="groupName">Group Name <span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="groupName" formControlName="groupName" readonly style="background-color: rgb(234, 231, 231)"
        required />
      <div *ngIf="groupName?.invalid &&groupName?.touched" class="error-message text-danger" style="font-size: 12px;">
        Group Name is required.
      </div>
    </div>

getGroupName(){
    let groupNumber = this.accMgmtContactForm.get('groupNumber')?.value;
    console.log(groupNumber)
    this.customerInfoService.getCustomerInfoByGroupNumber(groupNumber)
    .subscribe((result: any) => {
      this.customerList = result;
      console.log(result)
      this.store.dispatch(new SetAllCustomerInfoData({ data: result }))
      this.groupName?.setValue(result[0]?.groupName);
    })
  }
