package com.uhc.ei.planlibrary.cbb.controller;


import com.uhc.ei.planlibrary.mongodb.domain.MedicalLibraryAPICollection;
import com.uhc.ei.planlibrary.mongodb.repo.MedicalLibraryAPICollectionRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

@Controller
public class StressPerformanceController {

    @Autowired
    private MedicalLibraryAPICollectionRepository medicalLibraryAPICollectionRepository;

    @GetMapping("/latestPlans")
    public ResponseEntity<List<Long>> getLatestPlans() {
        List<MedicalLibraryAPICollection> latestPlans = new ArrayList<>();

        latestPlans.addAll(medicalLibraryAPICollectionRepository.findTop50ByPlanDetails_OrganizationAndPlanDetails_CocSeriesOrderByPlanDetails_CreatedOnDesc("Surest - FI", 2024));
        latestPlans.addAll(medicalLibraryAPICollectionRepository.findTop50ByPlanDetails_OrganizationAndPlanDetails_CocSeriesOrderByPlanDetails_CreatedOnDesc("UnitedHealthcare", 2024));
        latestPlans.addAll(medicalLibraryAPICollectionRepository.findTop50ByPlanDetails_OrganizationAndPlanDetails_CocSeriesOrderByPlanDetails_CreatedOnDesc("Level 2", 2024));

        return ResponseEntity.ok().body(latestPlans.stream().map(plan -> plan.getPlanAssignmentID()).collect(Collectors.toList()));
    }
}

