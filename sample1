  @PostMapping("/splitPlLimitRecord")
    @ResponseBody
    @ApiOperation(value="Split PL Limit Record")
    public ResponseEntity<Object> splitPlLimitRecord(ModelAndView modelAndView, HttpServletRequest request,
                                                        @RequestBody LimitMgmtRequest limitMgmtRequest) throws Exception {
        if (limitMgmtRequest == null)
            throw new Exception("limitMgmtRequest split should not be Empty or null..!");
        HttpSession session = request.getSession();
        String currentUser = (String) session.getAttribute(SessionConstants.USER_NAME);
        String limitMsg = limitManagementService.splitPlLimitRecord(limitMgmtRequest, currentUser);
        return ResponseEntity.status(HttpStatus.CREATED).body(Collections.singletonMap("limitMsg", limitMsg));
    }
