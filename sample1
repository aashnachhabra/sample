 if(ifpSpgBatchManagement.getStatus().equalsIgnoreCase("Completed"))
        {

            filePath = nasDrivePath+"SPGChangeReports"+File.separator+"Completed";
        }
       else if(ifpSpgBatchManagement.getStatus().equalsIgnoreCase("Queued"))
        {
            filePath = nasDrivePath+"SPGChangeReports"+File.separator+"Queued";
        }
        else if(ifpSpgBatchManagement.getStatus().equalsIgnoreCase("Rejected"))
        {
            filePath = nasDrivePath+"SPGChangeReports"+File.separator+"Failed";
        }
       else if(ifpSpgBatchManagement.getStatus().equalsIgnoreCase("Failed"))
        {
            filePath = nasDrivePath+"SPGChangeReports"+File.separator+"Failed";
        }
        else if(ifpSpgBatchManagement.getStatus().equalsIgnoreCase("In Progress"))
        {
            filePath = nasDrivePath+"SPGChangeReports"+File.separator+"In Progress";
        }
        else if(ifpSpgBatchManagement.getStatus().equalsIgnoreCase("Ready for Review"))
        {
            filePath = nasDrivePath+"SPGChangeReports"+File.separator+ifpSpgBatchManagement.getCocSeries().iterator().next();
        }

