def "Should get Notification by ID"(){
        given:
        def notification = new Notification(
                notificationID: 1,
                notificationDescription: "Test",
                notificationShortDescription: "TestType",
        )
        notificationRepository.findByNotificationIDAndIsCurrentTrue(1) >> notification

        when:
        def result = notificationService.getNotificationByNotificationID(1)

        then:
        result == notification
    }

    def requestNotification(){
        new NotificationRequest(
                notificationID: 1,
                notificationDescription: "Test",
                notificationShortDescription: "TestType",
        )
    }
